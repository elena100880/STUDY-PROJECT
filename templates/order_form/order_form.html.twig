{% extends 'base.html.twig' %}

{% block stylesheets1 %}
    <link rel="stylesheet" href="/css/order_form.css">
{% endblock %}

{% block content %}  

<h1>COMPLETE YOUR ORDER</h1>     
   
<table>

    <tr>
        <th>SN</th> <th>ID</th> <th>Product</th>  <th>Price</th>  <th>Quantity</th>  <th>Sum</th> 
    </tr>

    {% set i = 0 %}
    {% set sum = 0 %}
    {% for orderProduct in arrayOfOrderProductsInCart %}
    <tr>

        <td align = 'center'> {% set i = i + 1 %} {{i}}</td>
        <td align = 'center'> {{orderProduct.products.id}} </td>
        <td align = 'center'> {{orderProduct.products}} </td>
        <td align = 'center'> {{orderProduct.products.price}} </td>
        
        <td align = 'center'> {{orderProduct.amount}} </td>

        <td align = 'center'> 
                {{orderProduct.getTotalValue}} 
                {% set sum = sum + orderProduct.products.price * orderProduct.amount %} 
        </td>

    </tr>
    {% endfor %}

</table>

<h4>Total sum:   <span class="plus"> {{ sum }} z≈Ç. </span> </h4>

{% if note is not null %}
<span style="color:red; font-weight:bold">{{note}}</span><br><br>
{% endif %}

<h2>Please add information to complete your order:</h2>
    
{{form_start(form)}}

    {{form_row(form.name)}}
    {{form_row(form.surname)}}
    {{form_row(form.street)}}
    {{form_row(form.city)}}
    {{form_row(form.post)}}

    <div class = 'form'>
        {{form_row(form.send)}}
    </div>

    <div class = 'form'>
        <button type="button"><a href="{{ path('cart_view') }}">Back to CART</a></button>
    </div>   

    <div class = 'form'>
        {{form_row(form.reset)}}
    </div>
    <div style = 'clear:both'></div>

{{form_end(form)}}

{% endblock %}


